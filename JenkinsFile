pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Pull the latest code from GitHub using the updated credentials
                git branch: 'main', credentialsId: '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', url: 'https://github.com/Hema887/new.git'
            }
        }

        stage('Deploy to VM') {
            steps {
                sshagent(['978b3b65-6239-417d-9342-27ff2c295582']) {
                    sh '''
                    ssh jenkins@20.2.249.184 << 'EOF'
                    # Change to the project directory
                    cd /opt/new/kovela
                    
                    # List the contents of the directory
                    echo "Contents of $(pwd):"
                    ls -l
                    
                    # Pull the latest code from the main branch
                    git pull origin main
                    
                    # Run Maven clean install
                    mvn clean install
                    
                    # Run the deployment script if it exists
                    if [ -f ./deploy.sh ]; then
                        ./deploy.sh
                    else
                        echo "deploy.sh not found!"
                        exit 1
                    fi
                    EOF
                    '''
                }
            }
        }
    }
}
